<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_bathroom_key_list" model="ir.ui.view">
        <field name="name">bathroom.key.list</field>
        <field name="model">bathroom.key</field>
        <field name="arch" type="xml">
            <list string="Llaves">
                <field name="name"/>
                <field name="state" decoration-success="state == 'available'"
                                    decoration-danger="state == 'in_use'"/>
                <field name="current_request_id"/>
            </list>
        </field>
    </record>

    <record id="view_bathroom_key_form" model="ir.ui.view">
        <field name="name">bathroom.key.form</field>
        <field name="model">bathroom.key</field>
        <field name="arch" type="xml">
            <form string="Llave del baÃ±o">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="state"/>
                        <field name="current_request_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bathroom_key" model="ir.actions.act_window">
        <field name="name">Llaves</field>
        <field name="res_model">bathroom.key</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>